@model AssetCategory

<form method="post">
    <div class="card">
        <div class="card-body">
            
            <div class="row mb-3">
                <label class="col-md-4">Name<i class="text-danger">*</i></label>
                <div class="col-md-8">
                    <input asp-for="Name" required class="form-control" />
