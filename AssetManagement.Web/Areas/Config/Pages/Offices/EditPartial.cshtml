@model Office

<form method="post">
    <div class="card">
        <div class="card-body">
            
            <div class="row mb-3">
                <label class="col-md-4">Name<i class="text-danger">*</i></label>
                <div class="col-md-8">
                    <input asp-for="Name" required class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            </div>
             <div class="row mb-3">
                <label class="col-md-4">Station</label>
                <div class="col-md-8">
                    <select asp-for="StationId" class="form-select" asp-items="@ViewBag.Stations">
                        <option>Select...</option>
                    </select>
                    <span asp-validation-for="StationId" class="text-danger"></span>
                </div>
            </div>
           
           
        </div>
        <div class="card-footer">
            <button class="btn btn-success">Save</button>
        </div>
    </div>
</form>


