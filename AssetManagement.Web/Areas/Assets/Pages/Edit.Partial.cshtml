@model Asset

<form method="post">
    <div class="card">
        <div class="card-body">
            <div class="row mb-3">
                <label class="col-md-4">Device name<i class="text-danger">*</i></label>
                <div class="col-md-8">
                    <input asp-for="Name" required class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            </div>
            <div class="row mb-3">
                <label class="col-md-4">Make<i class="text-danger">*</i></label>
                <div class="col-md-8">
                    <input asp-for="Make" required class="form-control" />
                    <span asp-validation-for="Make" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-md-4">Serial number<i class="text-danger">*</i></label>
                <div class="col-md-8">
                    <input asp-for="SerialNumber" required class="form-control" />
                    <span asp-validation-for="SerialNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-md-4">Product number<i class="text-danger">*</i></label>
                <div class="col-md-8">
                    <input asp-for="Number" required class="form-control" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-md-4">Category<i class="text-danger">*</i></label>
                <div class="col-md-8">
                    <select asp-for="CategoryId" class="form-select" asp-items="@ViewBag.Categories">
                        <option>Select...</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-md-4">Station<i class="text-danger">*</i></label>
                <div class="col-md-8">
                    <select asp-for="StationId" class="form-select" asp-items="@ViewBag.Stations">
                        <option>Select...</option>
                    </select>
                    <span asp-validation-for="StationId" class="text-danger"></span>
                </div>
            </div>
             <div class="row mb-3">
                <label class="col-md-4">Office</label>
                <div class="col-md-8">
                    <select asp-for="OfficeId" class="form-select" asp-items="@ViewBag.Offices">
                        <option>Select...</option>
                    </select>
                    <span asp-validation-for="OfficeId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-md-4">Description</label>
                <div class="col-md-8">
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
                    
        </div>
        <div class="card-footer">
            <button class="btn btn-success">Save</button>
        </div>
    </div>
</form>


